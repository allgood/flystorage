{
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  }
}